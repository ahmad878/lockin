{
  "appId": "com.lockin.app",
  "appName": "BitChatly",
  "webDir": "public",
  "server": {
    "cleartext": true,
    "allowNavigation": [
      "lockin-production.up.railway.app"
    ],
    "androidScheme": "https"
  },
  "plugins": {
    "CapacitorHttp": {
      "enabled": false
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon_config_sample",
      "iconColor": "#488AFF",
      "sound": "beep"
    },
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    }
  }
}